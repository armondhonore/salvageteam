<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <screen id="hud">
        <layer id="background" childLayout="center">
<!--            <image filename="Interface/tutorial/step2/start-background.png"></image>-->
            <panel id="panel_bottom_left" height="100%" width="10%" valign="center" childLayout="absolute" 
                 backgroundColor="#44fd">  
                <text font="aurulent-sans-16.fnt" text="Michael Speth"
                  align="center" valign="center" color="#FFFF" 
                  x="0" y="0" />
                <text font="aurulent-sans-16.fnt" text="Tim-H. Heuer"
                  align="left" valign="top" 
                  x="0" y="30" />
                </panel>
        </layer>
    </screen>
  <screen id="start" controller="com.monkygames.st.control.MenuControl">
    <layer id="layer" childLayout="vertical" backgroundImage="Interface/Galaxy_Planets_013.jpg">
      <panel id="panel" height="10%" width="20%" align="center" childLayout="center" visibleToMouse="true">
          <control color="#000f" name="button" label="PLAY" id="playButton" align="center" width="100%" height="100%">
            <interact onClick="unPause()" />
            <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="PLAY ME" align="center" />
            <effect>
              <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
              <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
              <onHover name="pulsate" scaleFactor="0.008" startColor="#9991" endColor="#aaae" post="true"/>
            </effect>
          </control>
          <control color="#000f" name="button" label="Score" id="scoreButton" align="center" width="20%" height="10%">
            <interact onClick="unPause()" />
            <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="SCORES" align="center" />
            <effect>
              <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
              <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
              <onHover name="pulsate" scaleFactor="0.008" startColor="#9991" endColor="#aaae" post="true"/>
            </effect>
          </control>
        <!--<text id="text" font="aurulent-sans-16.fnt" color="#000f" text="PLAY" align="center" valign="center" />-->
      </panel>
      <panel id="panel" height="10%" width="20%" align="center" childLayout="center" visibleToMouse="true">
          <control color="#000f" name="button" label="Exit" id="exitButton" align="center" width="100%" height="100%">
            <interact onClick="unPause()" />
            <text id="text" font="aurulent-sans-16.fnt" color="#ffff" text="EXIT" align="center" />
            <effect>
              <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
              <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
              <onHover name="pulsate" scaleFactor="0.008" startColor="#9991" endColor="#aaae" post="true"/>
            </effect>
          </control>
      </panel>
    </layer>
  </screen>
</nifty>